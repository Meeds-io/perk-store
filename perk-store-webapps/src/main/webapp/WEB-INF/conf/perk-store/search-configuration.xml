<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <external-component-plugins>
    <target-component>org.exoplatform.social.core.search.SearchService</target-component>
    <component-plugin>
      <name>PerkStoreSearchConnector</name>
      <set-method>addConnector</set-method>
      <type>org.exoplatform.social.core.search.SearchConnectorPlugin</type>
      <description>PerkStore Search connector</description>
      <init-params>
        <object-param>
          <name>PerkStoreSearchConnector</name>
          <description>Search connector for perk store products</description>
          <object type="org.exoplatform.social.core.search.SearchConnector">
            <field name="name">
              <string>products</string>
            </field>
            <field name="uri">
              <string><![CDATA[/portal/rest/perkstore/api/product]]></string>
            </field>
            <field name="enabled">
              <boolean>${exo.search.perkstore.enabled:true}</boolean>
            </field>
            <field name="jsModule">
              <string>SHARED/PerkStoreSearch</string>
            </field>
            <field name="i18nBundle">
              <string>locale.addon.PerkStore</string>
            </field>
            <field name="uiComponent">
              <string>perk-store-product-search-card</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>