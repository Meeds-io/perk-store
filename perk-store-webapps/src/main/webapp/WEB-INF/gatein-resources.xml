<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/gatein_resources_1_4 http://www.exoplatform.org/xml/ns/gatein_resources_1_4" xmlns="http://www.exoplatform.org/xml/ns/gatein_resources_1_4">
<!-- 
  We can't use this due to:
  https://jira.exoplatform.org/browse/PLF-8100

  <portlet-skin>
    <application-name>exo-perk-store</application-name>
    <portlet-name>PerkStore</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/css/perkstore.css</css-path>
  </portlet-skin>
  <portlet-skin>
    <application-name>exo-perk-store</application-name>
    <portlet-name>PerkStore</portlet-name>
    <skin-name>Enterprise</skin-name>
    <css-path>/css/perkstore.css</css-path>
  </portlet-skin>
-->

  <portlet>
    <name>PerkStore</name>
    <module>
      <script>
        <minify>false</minify>
        <path>/js/perkstore.bundle.js</path>
      </script>
      <depends>
        <module>vuetify</module>
      </depends>
      <depends>
        <module>jquery</module>
        <as>$</as>
      </depends>
      <depends>
        <module>fetchPolyfill</module>
      </depends>
      <depends>
        <module>customEventPolyfill</module>
      </depends>
      <depends>
        <module>iePolyfills</module>
      </depends>
      <depends>
        <module>userPopupPlugin</module>
      </depends>
      <depends>
        <module>spacePopupPlugin</module>
      </depends>
      <depends>
          <module>filedrop</module>
      </depends>
      <depends>
          <module>JsBarcode</module>
      </depends>
      <depends>
          <module>Quagga</module>
      </depends>
      <depends>
        <module>commons-cometd3</module>
        <as>cCometd</as>
      </depends>
    </module>
  </portlet>

  <module>
    <name>Quagga</name>
    <script>
      <minify>false</minify>
      <adapter>
        (function() {
          <include>/js/lib/quagga.min.js</include>
          return Quagga;
        })();
      </adapter>
    </script>
  </module>

  <module>
    <name>JsBarcode</name>
    <script>
      <minify>false</minify>
      <adapter>
        (function() {
          <include>/js/lib/JsBarcode.all.min.js</include>
          return JsBarcode;
        })();
      </adapter>
    </script>
  </module>

</gatein-resources>
