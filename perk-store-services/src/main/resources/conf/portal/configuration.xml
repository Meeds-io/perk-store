<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.addon.perkstore.dao.PerkStoreOrderDAO</type>
  </component>

  <component>
    <type>org.exoplatform.addon.perkstore.dao.PerkStoreProductDAO</type>
  </component>

  <component>
    <key>org.exoplatform.addon.perkstore.storage.PerkStoreStorage</key>
    <type>org.exoplatform.addon.perkstore.storage.cached.PerkStoreCachedStorage</type>
  </component>

  <component>
    <type>org.exoplatform.addon.perkstore.service.PerkStoreService</type>
  </component>

  <component>
    <type>org.exoplatform.addon.perkstore.service.PerkStoreWebSocketService</type>
  </component>

  <component>
    <type>org.exoplatform.addon.perkstore.rest.PerkStoreOrderREST</type>
  </component>

  <component>
    <type>org.exoplatform.addon.perkstore.rest.PerkStoreProductREST</type>
  </component>

  <component>
    <type>org.exoplatform.addon.perkstore.rest.PerkStoreSettingsREST</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.addon.wallet.transaction.mined</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.addon.perkstore.listener.EthereumWalletTransactionListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.persistence.DataInitializer</target-component>
    <component-plugin>
      <name>PerkStoreRDBMSChangeLogsPlugin</name>
      <set-method>addChangeLogsPlugin</set-method>
      <type>org.exoplatform.commons.persistence.impl.ChangeLogsPlugin</type>
      <init-params>
        <values-param>
          <name>changelogs</name>
          <description>Change logs of Perk store RDBMS</description>
          <value>db/changelog/perkstore-rdbms.db.changelog-master.xml</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.cache.CacheService</target-component>
    <component-plugin>
      <name>addExoCacheConfig</name>
      <set-method>addExoCacheConfig</set-method>
      <type>org.exoplatform.services.cache.ExoCacheConfigPlugin</type>
      <description>Configures the cache for Perk store products and orders</description>
      <init-params>
        <object-param>
          <name>perkstore.product</name>
          <object type="org.exoplatform.services.cache.impl.infinispan.generic.GenericExoCacheConfig">
            <field name="name">
              <string>wallet.transactionsMessages</string>
            </field>
            <field name="maxSize">
              <int>${exo.cache.perkstore.product.MaxNodes:1000}</int>
            </field>
            <field name="liveTime">
              <long>${exo.cache.perkstore.product.TimeToLive:-1}</long>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>perkstore.order</name>
          <object type="org.exoplatform.services.cache.impl.infinispan.generic.GenericExoCacheConfig">
            <field name="name">
              <string>wallet.accountDetailCache</string>
            </field>
            <field name="maxSize">
              <int>${exo.cache.perkstore.order.MaxNodes:2000}</int>
            </field>
            <field name="liveTime">
              <long>${exo.cache.perkstore.order.TimeToLive:-1}</long>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.file.services.NameSpaceService</target-component>
    <component-plugin>
      <name>PerkStoreNameSpacePlugin</name>
      <set-method>addNameSpacePlugin</set-method>
      <type>org.exoplatform.commons.file.services.NameSpacePlugin</type>
      <init-params>
        <properties-param>
          <name>fileNameSpace.params</name>
          <property name="name" value="PerkStore"/>
          <property name="description" value="PerkStore files storage"/>
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>
